<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
					   xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
					   x:Class="Core.Views.MainPageView" xmlns:localControls="clr-namespace: Core.Helpers.Controls;assembly=Core" >
  
  <StackLayout>

    <StackLayout>
      <localControls:ImageButton Command="{Binding RefreshCommand}" ImagePath="refresh" ImageHeightRequest="50" ImageWidthRequest="50" HorizontalOptions="End"/>
    </StackLayout>

    <Label Text="{Binding Message}" VerticalOptions="Center" HorizontalOptions="Center" />

  </StackLayout>
</ContentPage>